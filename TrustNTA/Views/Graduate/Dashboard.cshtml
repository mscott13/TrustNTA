<div id="search-filter-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i style="margin-right:5px;" class="fas fa-sliders-h"></i>Apply a search filter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Filter by Job Title</label>
                        <input style="height: 60px;font-size: 25px;text-transform: capitalize;" type="email" class="form-control" id="filter_jobTitle" placeholder="Filter jobs by name...">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>By Company</label>
                            <select id="filter_company" class="form-control">
                                <option value="0">Company filter</option>
                                @if (Model != null && Model.companies != null)
                                {
                                    foreach (TrustNTA.Models.Company company in Model.companies)
                                    {
                                        <option value="@company.companyName">@company.companyName</option>
                                    }
                                }
                                else
                                {
                                    <option value="0" disabled>No companies available</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Job Type</label>
                            <select id="filter_jobType" class="form-control">
                                <option value="0" selected disabled>Job filter</option>
                                @if (Model != null && Model.jobTypes != null)
                                {
                                    foreach (TrustNTA.Models.Job job in Model.jobTypes)
                                    {
                                        <option value="@job.title">@job.title</option>
                                    }
                                }
                                else
                                {
                                    <option value="0" disabled>No job categories available</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Location</label>
                            <select id="filter_location" class="form-control">
                                <option value="0" selected disabled>Location filter</option>
                                @if (Model != null && Model.jobLocations != null)
                                {
                                    foreach (TrustNTA.Models.JobLocation jobLocation in Model.jobLocations)
                                    {
                                        <option value="@jobLocation.locationName">@jobLocation.locationName</option>
                                    }
                                }
                                else
                                {
                                    <option value="0" disabled>No job locations available</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Vacancy Status</label>
                            <select id="filter_vacancyStatus" class="form-control">
                                <option value="0" selected disabled>Vacancy filter</option>
                                <option value="Open">Open</option>
                                <option value="Filled">Filled</option>
                                <option value="Closed">Closed</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Start Date</label>
                            <input type="email" class="form-control" id="filter_startDate" placeholder="Filter by start date...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>End Date</label>
                            <input type="email" class="form-control" id="filter_endDate" placeholder="Filter by end date...">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btn-close-searchfilter-modal" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="btn-filter-search" type="button" class="btn btn-primary"><i style="margin-right: 5px;" class="fas fa-pencil-alt"></i>Apply Filter</button>
            </div>
        </div>
    </div>
</div>